                android:progress="50"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="25dp">

                <Button
                    android:id="@+id/changeNameBtn3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:text="@string/IBF7"
                    android:contentDescription="@string/IBF7"
                    android:textSize="7dp"
                    android:onClick="buttonPressed"/>

                <EditText
                    android:id="@+id/editNameTxt3"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:visibility="invisible"
                    android:textSize="7dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/layoutBulbFour"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/IBF4"
                android:contentDescription="@string/IBF4"
                app:srcCompat="@drawable/offbulb"
                android:onClick="buttonPressed"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foco 4"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtvIntensidadFocoCuatro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intensidad"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <SeekBar
                android:id="@+id/sBfocoCuatro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:min="0"
                android:max="100"
                android:progress="50"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="25dp">

                <Button
                    android:id="@+id/changeNameBtn4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:text="@string/IBF7"
                    android:contentDescription="@string/IBF7"
                    android:textSize="7dp"
                    android:onClick="buttonPressed"/>

                <EditText
                    android:id="@+id/editNameTxt4"
                    android:layout_marginHorizontal="25dp"
                    android:layout_width="170dp"
                    android:layout_height="35dp"
                    android:visibility="invisible"
                    android:textSize="7dp"
